<p>
  <%= link_to 'Edit', edit_record_path(@record) %> |
  <%= link_to 'Back', records_path %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @record.artist %>
</p>

<p>
  <strong>Album:</strong>
  <%= @record.album %>
</p>

<p>
  <strong>Year Released:</strong>
  <%= @record.year_released %>
</p>

<p>
  <strong>Year Printed:</strong>
  <%= @record.year_printed %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @record.condition %>
</p>

<strong>Tracks</strong>

<% @record.tracks.each do |track| %>
  <p>
    <strong>Title:</strong>
    <%= track.title %>
  </p>
<% end %>

<strong> Add a track:</strong>

<%= form_with(model: [@record, @record.tracks.build], local: true) do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>