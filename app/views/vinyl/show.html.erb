
<p>
  <%= link_to 'Edit', edit_vinyl_path(@vinyl) %> |
  <%= link_to 'Back', vinyl_index_path %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @vinyl.artist %>
</p>

<p>
  <strong>Album:</strong>
  <%= @vinyl.album %>
</p>

<p>
  <strong>Year Released:</strong>
  <%= @vinyl.year_released %>
</p>

<p>
  <strong>Year Printed:</strong>
  <%= @vinyl.year_printed %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @vinyl.condition %>
</p>

<strong>Tracks</strong>
<% @vinyl.tracks.each do |track| %>
  <p>
    <strong>Title:</strong>
    <%= track.title%>
  </p>
<% end %>

<strong>Add a track:</strong>
<%= form_with(model: [ @vinyl, @vinyl.tracks.build ], local: true) do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>